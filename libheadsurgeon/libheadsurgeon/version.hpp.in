#pragma once

// The numeric version format is AAABBBCCCDDDE where:
//
// AAA - major version number
// BBB - minor version number
// CCC - bugfix version number
// DDD - alpha / beta (DDD + 500) version number
// E   - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAABBBCCC. For example:
//
// Version      AAABBBCCCDDDE
//
// 0.1.0        0000010000000
// 0.1.2        0000010010000
// 1.2.3        0010020030000
// 2.2.0-a.1    0020019990010
// 3.0.0-b.2    0029999995020
// 2.2.0-a.1.z  0020019990011
//
#define LIBHEADSURGEON_VERSION $libheadsurgeon.version.project_number$ULL
#define LIBHEADSURGEON_VERSION_STR "$libheadsurgeon.version.project$"
#define LIBHEADSURGEON_VERSION_ID "$libheadsurgeon.version.project_id$"

#define LIBHEADSURGEON_VERSION_MAJOR $libheadsurgeon.version.major$
#define LIBHEADSURGEON_VERSION_MINOR $libheadsurgeon.version.minor$
#define LIBHEADSURGEON_VERSION_PATCH $libheadsurgeon.version.patch$

#define LIBHEADSURGEON_PRE_RELEASE $libheadsurgeon.version.pre_release$

#define LIBHEADSURGEON_SNAPSHOT_SN $libheadsurgeon.version.snapshot_sn$ULL
#define LIBHEADSURGEON_SNAPSHOT_ID "$libheadsurgeon.version.snapshot_id$"
